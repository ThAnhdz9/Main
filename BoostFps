local MAX_FPS = 20
local MIN_FPS = 15
local ENABLE_RENDER = true
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Lighting = game:GetService("Lighting")
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local Player = game.Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")
local TeleportService = game:GetService("TeleportService")
local StarterGui = game:GetService("StarterGui")
local blackScreen
local lastClickTime = 0
local doubleClickInterval = 0.3
local function hideMessages()
    StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.Chat, false)
end
local function reduceGraphics()
    local settings = UserSettings():GetService("UserGameSettings")
    settings.MasterVolume = 0 -- Tắt âm thanh
    settings.SavedQualityLevel = Enum.SavedQualitySetting.Level01 -- Chất lượng thấp nhất
    settings.GraphicsQualityLevel = 1 -- Đồ họa ở mức thấp nhất
    settings.Fullscreen = false -- Tắt chế độ toàn màn hình (tùy chỉnh theo ý bạn)
    warn("Đã giảm đồ họa xuống mức thấp nhất!")
end
local function createBlackScreen()
    if not blackScreen then
        blackScreen = Instance.new("ScreenGui")
        blackScreen.IgnoreGuiInset = true
        blackScreen.ResetOnSpawn = false
        local blackFrame = Instance.new("Frame")
        blackFrame.Size = UDim2.new(1, 0, 1, 0)
        blackFrame.Position = UDim2.new(0, 0, 0, 0)
        blackFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        blackFrame.BackgroundTransparency = 0
        blackFrame.BorderSizePixel = 0
        blackFrame.Parent = blackScreen

        blackScreen.Parent = PlayerGui
    end
end
local function removeBlackScreen()
    if blackScreen then
        blackScreen:Destroy()
        blackScreen = nil
    end
end
local function disableEffects()
    Lighting.GlobalShadows = false
    Lighting.Brightness = 1
    Lighting.FogEnd = 100000
    Lighting.Ambient = Color3.fromRGB(128, 128, 128)
    for _, sound in ipairs(game:GetDescendants()) do
        if sound:IsA("Sound") then
            sound.Volume = 0
        end
    end
    for _, v in ipairs(Workspace:GetDescendants()) do
        pcall(function()
            v.Transparency = 1
        end)
    end
    for _, v in ipairs(getnilinstances()) do
        pcall(function()
            v.Transparency = 1
            for _, v1 in ipairs(v:GetDescendants()) do
                v1.Transparency = 1
            end
        end)
    end
    local workspaceMonitor = Workspace
    workspaceMonitor.DescendantAdded:Connect(function(v)
        pcall(function()
            v.Transparency = 1
        end)
    end)
end
local function setRenderState(enabled)
    if enabled then
        disableEffects()
        createBlackScreen()
    else
        removeBlackScreen()
    end
end
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        local currentTime = tick()
        if currentTime - lastClickTime <= doubleClickInterval then
            removeBlackScreen()
        end
        lastClickTime = currentTime
    end
end)
hideMessages()
reduceGraphics()
setRenderState(true)
setfpscap(MAX_FPS)
