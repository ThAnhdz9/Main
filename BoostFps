local MAX_FPS = 20
local MIN_FPS = 15
local ENABLE_RENDER = true
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Lighting = game:GetService("Lighting")
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local Player = game.Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")
local TeleportService = game:GetService("TeleportService")
local screenGui = Instance.new("ScreenGui")
local textLabel = Instance.new("TextLabel")
local blackScreen
local lastClickTime = 0
local doubleClickInterval = 0.3
screenGui.Parent = PlayerGui
screenGui.DisplayOrder = 100
textLabel.Parent = screenGui
textLabel.Size = UDim2.new(0, 300, 0, 50)
textLabel.Position = UDim2.new(0, 10, 0, 10)
textLabel.Font = Enum.Font.FredokaOne
textLabel.TextScaled = true
textLabel.BackgroundTransparency = 1
textLabel.TextStrokeTransparency = 0
local function createBlackScreen()
    if not blackScreen then
        blackScreen = Instance.new("ScreenGui")
        blackScreen.IgnoreGuiInset = true
        blackScreen.ResetOnSpawn = false
        local blackFrame = Instance.new("Frame")
        blackFrame.Size = UDim2.new(1, 0, 1, 0)
        blackFrame.Position = UDim2.new(0, 0, 0, 0)
        blackFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        blackFrame.BackgroundTransparency = 0
        blackFrame.BorderSizePixel = 0
        blackFrame.Parent = blackScreen

        blackScreen.Parent = PlayerGui
    end
end
local function removeBlackScreen()
    if blackScreen then
        blackScreen:Destroy()
        blackScreen = nil
    end
end
local function disableEffects()
    Lighting.GlobalShadows = false
    Lighting.Brightness = 1
    Lighting.FogEnd = 100000
    Lighting.Ambient = Color3.fromRGB(128, 128, 128)
    for _, sound in ipairs(game:GetDescendants()) do
        if sound:IsA("Sound") then
            sound.Volume = 0
        end
    end
    for _, v in ipairs(Workspace:GetDescendants()) do
        pcall(function()
            v.Transparency = 1
        end)
    end
end
local function setRenderState(enabled)
    if enabled then
        disableEffects()
        createBlackScreen()
    else
        removeBlackScreen()
    end
end
local frameCount = 0
local lastUpdate = tick()
RunService.RenderStepped:Connect(function()
    frameCount = frameCount + 1
    local now = tick()

    if now - lastUpdate >= 1 then
        local fps = frameCount / (now - lastUpdate)
        frameCount = 0
        lastUpdate = now

        local userName = Player.Name
        textLabel.Text = string.format("%s, FPS: %d", userName, math.floor(fps))
    end
end)
local function rainbowColor()
    local hue = 0
    while true do
        hue = hue + 0.01
        if hue > 1 then hue = 0 end
        textLabel.TextColor3 = Color3.fromHSV(hue, 1, 1)
        RunService.RenderStepped:Wait()
    end
end
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        local currentTime = tick()
        if currentTime - lastClickTime <= doubleClickInterval then
            removeBlackScreen()
        end
        lastClickTime = currentTime
    end
end)
setRenderState(true)
setfpscap(MAX_FPS)
spawn(rainbowColor)
